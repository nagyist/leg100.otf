{{ template "layout" . }}

{{ define "title" }}Workspaces{{ end }}

{{ define "container-header" }}workspaces{{ end }}

{{ define "container-header-actions" }}
  <form action="{{ newWorkspacePath .Content.Organization }}" method="GET">
    <button type="submit">New Workspace</button>
  </form>
{{ end }}

{{ define "content" }}
  {{ range .Content.List.Items }}
  <div class="item">
    <div class="item-heading">
      <a class="status" href="{{ getWorkspacePath . }}">{{ .Name }}</a>
    </div>
    {{ template "identifier" . }}
  </div>
  {{ end }}
{{ end }}
